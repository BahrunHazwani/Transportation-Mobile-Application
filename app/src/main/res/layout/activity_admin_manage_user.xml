<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Admin.AdminManageUser">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bluepurple_gradient"
        android:fontFamily="@font/lexend"
        android:gravity="center"
        android:text="Manage Users"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/customercard"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_below="@id/slogan_category"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/customer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/m_user" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/spcard"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/customercard"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/sp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/m_sp"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
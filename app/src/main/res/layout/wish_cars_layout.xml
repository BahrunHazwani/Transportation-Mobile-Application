<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_color"
        android:padding="10dp">

        <TextView
            android:id="@+id/wl_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Car Name"
            android:fontFamily="@font/lexend"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wl_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lexend"
            android:text="Car Type"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/wl_sname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Service Provider Name: "
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/wl_car_type"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/wl_sphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Service Provider Phone: "
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/wl_sname"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/wl_sAccNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wl_sphone"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="Service provider Account No."
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_color"
        android:padding="10dp">

        <TextView
            android:id="@+id/Mname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name: "
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lexend"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/MmatricID"
            android:text="Matric ID: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lexend"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Memail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:layout_below="@id/MmatricID"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="40dp"/>


        <TextView
            android:id="@+id/Mphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:layout_below="@id/Memail"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/MaccountNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Name &amp; Account Number: "
            android:layout_below="@id/Mphone"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Picture: "
            android:layout_below="@id/MaccountNum"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>



        <ImageView
            android:id="@+id/MprofilePic"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/profile_text"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/MremoveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/display_button_color"
            android:fontFamily="@font/lexend"
            android:text="Remove User"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/MprofilePic" />



    </RelativeLayout>



</androidx.cardview.widget.CardView>
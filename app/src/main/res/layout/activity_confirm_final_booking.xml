<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Customers.ConfirmFinalBookingActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please write your Booking Details"
        android:textSize="20dp"
        android:fontFamily="@font/lexend"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin ="20dp"
        android:layout_below="@+id/title_sp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/lexend"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:text="* Please do check your booking destination/duration on previous car details page..."
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/booking_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:textSize="16dp"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/lexend"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:hint="Your Name"/>

    <EditText
        android:id="@+id/booking_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booking_name"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:fontFamily="@font/lexend"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:hint="Your Phone Number"/>

    <EditText
        android:id="@+id/booking_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booking_phone"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:fontFamily="@font/lexend"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:hint="Your Booking Date"/>

    <EditText
        android:id="@+id/booking_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booking_date"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:fontFamily="@font/lexend"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:hint="Your Booking Time"/>

    <EditText
        android:id="@+id/booking_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/booking_time"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:hint="Your payment amount based on your destination or duration"/>

    <TextView
        android:id="@+id/txt_cab_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_payment"
        android:layout_margin="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/lexend"
        android:text="* For cab booking only"
        android:textAlignment="textStart"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/booking_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/txt_cab_info"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:hint="Your Destination"/>

    <EditText
        android:id="@+id/booking_passenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booking_destination"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16dp"
        android:fontFamily="@font/lexend"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:hint="Number of Passenger"/>

    <TextView
        android:id="@+id/txt_rental_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend"
        android:layout_below="@+id/booking_destination"
        android:text="* For car rental booking only"
        android:textSize="18dp"
        android:layout_margin="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="textStart"
        android:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/booking_duration"
        android:layout_width="match_parent"
        android:fontFamily="@font/lexend"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:layout_below="@id/txt_rental_info"
        android:textCursorDrawable="@drawable/black_cursor"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:hint="Duration"/>


    <ImageView
        android:id="@+id/identity_card_image"
        android:layout_width="230dp"
        android:layout_height="170dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/select_car"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/booking_duration"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txt_identity_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/identity_card_image"
        android:fontFamily="@font/lexend"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:textAlignment="center"
        android:text="Please Upload Identity Card Picture"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="normal"
        />


    <ImageView
        android:id="@+id/license_image"
        android:layout_width="230dp"
        android:layout_height="170dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select_car"
        android:layout_gravity="center"
        android:layout_below="@id/txt_identity_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txt_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/license_image"
        android:fontFamily="@font/lexend"
        android:text="Please Upload License Picture"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="20dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:layout_marginLeft="90dp"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_booking_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/lexend"
        android:text="Confirm"
        android:layout_below="@id/txt_license"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"
        android:textSize="20dp"/>


  </LinearLayout>

</ScrollView>
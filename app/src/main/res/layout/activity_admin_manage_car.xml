<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Admin.AdminManageCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/car_image_manage"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/select_car" />

            <EditText
                android:id="@+id/car_name_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_image_manage"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="95dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:textCursorDrawable="@drawable/black_cursor"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input_design"
                android:fontFamily="@font/lexend"
                android:hint="Car Name..."
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:textSize="17dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/car_description_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_name_manage"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="95dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:textCursorDrawable="@drawable/black_cursor"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input_design"
                android:fontFamily="@font/lexend"
                android:hint="Car Description..."
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:textSize="17dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/apply_changes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_description_manage"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttons"
                android:fontFamily="@font/lexend"
                android:padding="17dp"
                android:text="Apply Changes"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_car_btn"
                android:layout_below="@id/apply_changes"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:text="Delete This Car"
                android:textAlignment="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/buttons"
                android:fontFamily="@font/lexend"
                android:padding="17dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>
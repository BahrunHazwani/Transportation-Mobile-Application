<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/sp_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sp_car_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_car_name"
            android:layout_marginTop="2dp"
            android:text="Car Status"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/sp_car_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/sp_car_status"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_car_image"
            android:layout_marginTop="2dp"
            android:text="Car Type"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <View
            android:id="@+id/ln0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/car_type"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimary" />


        <TextView
            android:id="@+id/sp_car_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln0"
            android:text="Car Description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"/>









    </RelativeLayout>

</androidx.cardview.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box_color"
        android:padding="10dp">

        <TextView
            android:id="@+id/bName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textAlignment="viewStart"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bMatricId"
            android:text="Matric ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lexend"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            />



        <TextView
            android:id="@+id/bDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination"

            android:layout_below="@id/bMatricId"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:layout_below="@id/bDestination"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bPassenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bDuration"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:text="Passenger"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:layout_below="@id/bPassenger"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:layout_below="@id/bPayment"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bPaymentMethod"
            android:text="Phone"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_below="@id/bPhone"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_below="@id/bTime"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bDate"
            android:text="Status"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ictext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:text="My Kad"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/icImageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ictext"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/licensetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icImageView"
            android:text="License"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/licenseImageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/licensetext"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/show_all_bookings_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show This Booking"
            android:layout_below="@+id/licenseImageView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/display_button_color"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"

            />


    </RelativeLayout>



</RelativeLayout>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ServiceProviders.SPAddNewCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/select_car"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/select_car" />

        <EditText
            android:id="@+id/car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_car"
            android:textCursorDrawable="@drawable/black_cursor"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            android:fontFamily="@font/lexend"
            android:hint="Car Name..."
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/car_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="45dp"
            android:textCursorDrawable="@drawable/black_cursor"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            android:fontFamily="@font/lexend"
            android:hint="Car Description..."
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:textSize="17dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_new_car"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_description"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/buttons"
            android:fontFamily="@font/lexend"
            android:padding="17dp"
            android:text="Add Car"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>